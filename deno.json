{
  "tasks": {
    "dev": "deno run --unstable-kv --unstable-cron --allow-env --allow-read=./.kv,./logs,.login,.env,.env.defaults,.env.example --allow-write=./.kv,./logs,.login --allow-net=public-ubiservices.ubi.com,prod.trackmania.core.nadeo.online,live-services.trackmania.nadeo.live,api.trackmania.com,discord.com --watch src/main.ts",
    "update": "deno run --no-prompt --unstable-kv --unstable-cron --allow-env --allow-read=./.kv,./logs,.login,.env,.env.defaults,.env.example --allow-write=./.kv,./logs,.login --allow-net=public-ubiservices.ubi.com,prod.trackmania.core.nadeo.online,live-services.trackmania.nadeo.live,api.trackmania.com,discord.com src/main.ts",
    "check": "deno fmt --check && deno lint && deno task check:types",
    "check:types": "deno check --unstable-kv --no-lock src/**/*.ts"
  },
  "lint": {
    "exclude": [
      "docker"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "noUncheckedIndexedAccess": true
  },
  "importMap": "./import_map.json"
}
